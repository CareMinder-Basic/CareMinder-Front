{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "persistent": true
    },
    "storybook": {
      "dependsOn": ["^storybook"],
      "persistent": true
    }
  }
}
