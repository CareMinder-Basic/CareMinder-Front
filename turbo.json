{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "persistent": true
    },
    "storybook": {
      "dependsOn": ["^storybook"],
      "persistent": true
    },
    "e2e": {
      "dependsOn": ["^e2e"],
      "cache": false,
      "outputs": []
    },
    "unit": {
      "dependsOn": [],
      "outputs": []
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "format": {
      "dependsOn": [],
      "outputs": []
    },
    "test": {
      "dependsOn": [],
      "outputs": []
    }
  }
}
