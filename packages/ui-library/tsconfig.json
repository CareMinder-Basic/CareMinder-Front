{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["react", "react-native"],
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,

    "baseUrl": "./",
    "paths": {
      "@ui-library/*": ["../../packages/ui-library/src/*"],
      "react-native": ["node_modules/react-native-web"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
